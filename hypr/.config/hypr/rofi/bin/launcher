DIR="$HOME/.config/hypr"

rofi \
	-show drun \
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields all \
	-no-drun-show-actions \
	-terminal alacritty \
	-kb-cancel Escape \
	-theme "$DIR"/rofi/themes/launcher.rasi
